<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Configuration Group (shown when not tracking) - High contrast -->
    <LinearLayout
        android:id="@+id/configGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Add significant spacing at top -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="40dp" />

        <!-- Your Name (label) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/your_name_label"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Your Name (display value) -->
        <TextView
            android:id="@+id/tvIdleSailorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="S01"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Event (label) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Event Display (name + ID) -->
        <TextView
            android:id="@+id/tvIdleEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event 2"
            android:textSize="20sp"
            android:textColor="#0066AA"
            android:layout_marginBottom="8dp" />

        <!-- Live Tracking (label) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Live Tracking"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Web Link (clickable, opens in browser) -->
        <TextView
            android:id="@+id/tvLiveTrackingLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://wstracker.org/event.html?eid=2"
            android:autoLink="web"
            android:textColor="#2196F3"
            android:textColorLink="#2196F3"
            android:linksClickable="true"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Server fields removed - now only in Settings dialog -->

    </LinearLayout>

    <!-- Status Group (shown when tracking) - High contrast for outdoor use -->
    <LinearLayout
        android:id="@+id/statusGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Top spacing to prevent text cutoff -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="24dp" />

        <!-- Event Name -->
        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="18sp"
            android:textColor="#0066AA"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Sailor ID and Frequency Mode Indicator -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/tvSailorId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S01"
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/tv1HzIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.1Hz"
                android:textSize="14sp"
                android:textColor="#00AAAA"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textSize="14sp"
            android:textColor="#444444"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---.-----° ---.-----°"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- kn"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---°"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dist"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- km"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAckRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--%"
                    android:textSize="22sp"
                    android:textColor="#008800" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last ACK"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLastAck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--:--"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Big Assist Button - High contrast for outdoor use -->
    <Button
        android:id="@+id/btnAssist"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="REQUEST ASSISTANCE\n\nLong press to activate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#00AA00"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btnStartStop"
        app:layout_constraintTop_toBottomOf="@id/statusGroup" />

    <!-- Start/Stop Button - High contrast for outdoor use -->
    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@id/btnSettings" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="Settings"
        android:textSize="16sp"
        android:textColor="#000000"
        android:backgroundTint="#BBBBBB"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
