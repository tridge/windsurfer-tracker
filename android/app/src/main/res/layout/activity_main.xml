<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".MainActivity">

    <!-- Configuration Group (shown when not tracking) - High contrast -->
    <LinearLayout
        android:id="@+id/configGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etSailorId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g. John or S07"
            android:inputType="text"
            android:maxLength="10"
            android:text="S01"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#EEEEEE"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Server Address"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etServerHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="IP address or hostname"
            android:inputType="textUri"
            android:text="wstracker.org"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="#EEEEEE"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Server Port"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/etServerPort"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Port number"
            android:inputType="number"
            android:text="41234"
            android:textSize="18sp"
            android:textColor="#000000"
            android:background="#EEEEEE"
            android:padding="12dp" />

    </LinearLayout>

    <!-- Status Group (shown when tracking) - High contrast for outdoor use -->
    <LinearLayout
        android:id="@+id/statusGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:background="#FFFFFF"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Event Name -->
        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textSize="18sp"
            android:textColor="#0066AA"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Frequency Mode Indicator -->
        <TextView
            android:id="@+id/tv1HzIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.1Hz MODE"
            android:textSize="14sp"
            android:textColor="#00AAAA"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position"
            android:textSize="14sp"
            android:textColor="#444444"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---.-----° ---.-----°"
            android:textSize="20sp"
            android:textColor="#000000"
            android:fontFamily="monospace" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvSpeed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-- kn"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Course"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="---°"
                    android:textSize="28sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connection"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvAckRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--%"
                    android:textSize="22sp"
                    android:textColor="#008800" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Last ACK"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLastAck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="18sp"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated"
                    android:textSize="14sp"
                    android:textColor="#444444"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvLastUpdate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="--:--:--"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:fontFamily="monospace" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Big Assist Button - High contrast for outdoor use -->
    <Button
        android:id="@+id/btnAssist"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:text="REQUEST ASSISTANCE\n\nLong press to activate"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#00AA00"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/btnStartStop"
        app:layout_constraintTop_toBottomOf="@id/statusGroup" />

    <!-- Start/Stop Button - High contrast for outdoor use -->
    <Button
        android:id="@+id/btnStartStop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Tracking"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:backgroundTint="#DDDDDD"
        app:layout_constraintBottom_toTopOf="@id/btnSettings" />

    <!-- Settings Button -->
    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textSize="16sp"
        android:textColor="#000000"
        android:backgroundTint="#BBBBBB"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
